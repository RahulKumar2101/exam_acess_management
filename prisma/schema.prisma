generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. ADMIN USER
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  
  exams     Exam[]
}

// 2. THE EXAM (Question Bank)
model Exam {
  id          String   @id @default(uuid())
  title       String
  description String?
  durationMin Int      @default(30)
  language    String   @default("English") 
  isActive    Boolean  @default(true)      
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
  
  questions   Question[]
  
  // Link to Student Access Codes (Required for filtering responses by Exam)
  accessCodes ExamAccess[] 
}

// 3. QUESTIONS (MCQ)
model Question {
  id            String   @id @default(uuid())
  text          String
  
  options       String[] 
  
  correctOption Int      // 0, 1, 2, or 3
  marks         Int      @default(1)
  
  exam          Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  examId        String

  // Link to pre-generated translations
  translations  QuestionTranslation[]
}

// 4. QUESTION TRANSLATIONS
model QuestionTranslation {
  id           String   @id @default(uuid())
  
  language     String   // e.g. "Hindi", "Marathi"
  
  text         String   // Translated Question Text
  options      String[] // Translated Options
  
  question     Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId   String

  // Ensure we only have one translation per language per question
  @@unique([questionId, language])
}

// 5. EXAM ACCESS (Student Login Management & Responses)
model ExamAccess {
  id              String    @id @default(uuid())
  
  // Student Info (Captured during Registration)
  studentName     String?
  studentEmail    String?
  studentPhone    String?   
  
  // Supervisor Info
  supervisorName  String?   
  supervisorEmail String?   

  // Score & Results
  score           Int?      @default(0)
  
  // Answers JSON (Stores { "questionId": selectedOptionIndex })
  answers         Json?     
  
  // Bulk Generation Fields
  companyName     String?   
  batchId         String?   
  
  accessCode      String    @unique 
  status          String    @default("ACTIVE") // ACTIVE, STARTED, COMPLETED
  
  sentAt          DateTime? 
  submittedAt     DateTime? 
  createdAt       DateTime  @default(now())
  
  // Relation to Exam (Crucial for the Responses Dashboard)
  examId          String?
  exam            Exam?     @relation(fields: [examId], references: [id], onDelete: SetNull)
}