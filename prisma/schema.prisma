generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. ADMIN USER
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  
  exams     Exam[]
}

// 2. THE EXAM (Question Bank)
model Exam {
  id          String   @id @default(uuid())
  title       String
  description String?
  durationMin Int      @default(30)
  language    String   @default("English") 
  isActive    Boolean  @default(true)      
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
  
  questions   Question[]
  
  // Link to Student Access Codes
  accessCodes ExamAccess[] 
}

// 3. QUESTIONS (MCQ)
model Question {
  id            String   @id @default(uuid())
  text          String
  
  options       String[] 
  
  correctOption Int      // 0, 1, 2, or 3
  marks         Int      @default(1)
  
  exam          Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  examId        String
}

// 4. EXAM ACCESS (Student Login Management)
model ExamAccess {
  id              String    @id @default(uuid())
  
  // Student Info (Filled by Student during registration)
  studentName     String?
  studentEmail    String?
  studentPhone    String?   
  
  // ✅ Supervisor Info
  supervisorName  String?   
  supervisorEmail String?   

  // ✅ Score & Results
  score           Int?      @default(0)
  
  // ✅ NEW FIELD: Stores the student's selected answers
  // Format: { "questionId": optionIndex } e.g. { "uuid-1": 0, "uuid-2": 3 }
  answers         Json?     
  
  // Bulk Generation Fields (Admin Side)
  companyName     String?   
  batchId         String?   
  
  accessCode      String    @unique 
  status          String    @default("ACTIVE") // ACTIVE, STARTED, COMPLETED
  
  sentAt          DateTime? 
  submittedAt     DateTime? 
  createdAt       DateTime  @default(now())
  
  // Relation to Exam 
  examId          String?
  exam            Exam?     @relation(fields: [examId], references: [id], onDelete: SetNull)
}